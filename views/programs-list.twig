{% if programs %}

	{% for program in programs %}

		{% if program.thumbnail.src == null %}

		<div class="program-item w-100 bg-dark-blue white pv6">
			<div class="program-item-inner mw8 center">
				<h2 class="f2 fw7 white">{{ program.post_title }}</h2>
				<div>{{ program.post_content }}</div>
			</div>
		</div>

		{% else %}

			<div class="program-item w-100 pv5">
				<div class="program-item-inner mw8 center cf">
					<div class="featimg fl w-100 w-50-l">
						<div class="featimg-bg" style="background-image:url('{{ program.thumbnail.src }}');" data-aos="fade-right"></div>
					</div>
					<div class="text fl w-100 w-50-l">
						<h2 class="f2 fw7">{{ program.post_title }}</h2>
						<div>{{ program.post_content }}</div>
					</div>
				</div>
			</div>

		{% endif %}

	{% endfor %}



{% endif %}